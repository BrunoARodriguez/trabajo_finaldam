<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LocationActivity">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
android:id="@+id/textoLocation"
    android:textSize="@dimen/etiquetas"
    android:text="@string/texto_location"
    android:textColor="@color/colorPrimary"
    android:background="@color/cardview_dark_background"
    android:layout_marginBottom="25dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toTopOf="@id/btnMyLocation"/>

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/btnMyLocation"
    android:text="@string/btn_ubicacion_actual"
    android:textColor="@color/colorPrimary"
    android:layout_marginBottom="40dp"
    android:layout_marginStart="15dp"
    app:layout_constraintTop_toBottomOf="@id/textoLocation"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toStartOf="@id/btnLocationDest"
    app:layout_constraintBottom_toTopOf="@id/btnDistanciaLocation"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_ubicacion_destino"
            android:id="@+id/btnLocationDest"
            android:textColor="@color/colorPrimary"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="40dp"
            app:layout_constraintTop_toTopOf="@id/btnMyLocation"
            app:layout_constraintStart_toEndOf="@id/btnMyLocation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btnAgregarFav"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height = "wrap_content"
        android:id="@+id/btnAgregarFav"
        android:text="@string/btn_agregar_fav"
        android:textColor="@color/colorPrimaryDark"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/btnLocationDest"
        app:layout_constraintStart_toEndOf="@id/btnDistanciaLocation"
        app:layout_constraintEnd_toEndOf="parent"/>

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/btnDistanciaLocation"
    android:text="@string/btn_distancia_location"
    android:textColor="@color/colorPrimary"
android:layout_marginStart="15dp"
    app:layout_constraintTop_toBottomOf="@id/btnMyLocation"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toStartOf="@id/btnAgregarFav"
    />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/btnVerMapa"
    android:textColor="@color/colorPrimaryDark"
    android:textSize="@dimen/etiquetas"
    android:text="Ver ubicaciones en mapa"
    android:layout_marginTop="30dp"
    android:layout_marginStart="15dp"
    android:visibility="gone"
    app:layout_constraintTop_toBottomOf="@id/btnDistanciaLocation"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

